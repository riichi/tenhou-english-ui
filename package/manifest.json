{
   "manifest_version": 2,
   "name": "Tenhou English UI",
   "version": "3.2.0",
   "description": "Change the UI text on the Tenhou HTML5 Web Client from Japanese to English",
   "icons": {
      "16": "icons/tenhou-16.png",
      "32": "icons/tenhou-32.png",
      "64": "icons/tenhou-64.png",
      "128": "icons/tenhou-128.png"
   },
   "page_action": {
      "default_icon": {
        "16": "icons/tenhou-16.png",
        "32": "icons/tenhou-32.png",
        "64": "icons/tenhou-64.png",
        "128": "icons/tenhou-128.png"
      },
      "default_title": "Tenhou English UI"
   },
   "permissions": [ "declarativeContent", "storage" ],
   "background": {
      "scripts": [ "background.js" ],
      "persistent": true
   },
   "content_scripts": [ {
      "matches": [
          "*://tenhou.net/3*",
          "*://tenhou.net/sc/*", 
          "*://tenhou.net/ranking.html", 
          "*://tenhou.net/stat/*"
      ],
      "js": [ "translations.js", "content.js" ],
      "css": [ "content.css" ],
      "run_at": "document_end"
   } ],
   "options_ui": {
      "chrome_style": true,
      "page": "options.html"
   }
}
